<div class="visibility-track my-8" id="{{page.title|hyphenize}}">
    <div class="md:w-5/12 relative z-1">
        {{ page.media[header.image_shape].quaity(100).html('','','w-full absolute offer-image') }}
    </div>
    <div class="container md:w-10/12 md:ml-auto md:pt-10 md:pl-0 md:py-12">
        <div class="flex flex-col md:flex-row justify-evenly md:space-x-8">
            <div class="content md:w-6/12 md:py-12 my-8 md:my-0 z-10"> 
                {% if content %}
                    {{content}}
                {% endif %}
                <a href="{{page.header.button_link}}" class="bg-red-500 hover:bg-red-700 text-white rounded font-bold py-2 px-4 mt-3"> 
					{{page.header.button}} 
                </a>
            </div>
            <div class="flex flex-wrap justify-end content-start md:content-end pseuod-dots--left md:w-3/12 my-4 md:my-0">
                {{ page.media[header.image_left].resize(150).quaity(100).html('','','w-5/6 rounded-lg offer-image') }}
            </div>
            <div class="flex flex-wrap content-end md:content-start pseuod-dots--right md:w-3/12 my-4 md:my-0">
                {{ page.media[header.image_right].resize(200).quaity(100).html('','','w-4/6 rounded-lg offer-image') }}
            </div>
        </div> 
    </div>
</div>
