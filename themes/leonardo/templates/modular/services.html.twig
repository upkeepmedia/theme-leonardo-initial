<div class="bg-white visibility-track" id="{{page.title|hyphenize}}">
    <div class="w-10/12 md:w-8/12 mx-auto py-8 lg:pl-0 lg:py-14">
		<div class="content text-center">
            {% if content %}
                {{content}}
            {% endif %}
        </div>
        <div class="grid md:grid-cols-3 gap-8 py-16">
		{% for service in page.header.services %} 
            <div class=" text-center bg-gray-100 shadow-md z-10 p-8 ">
                <div class="w-3/12 mx-auto text-center circle--background rounded-full p-4">
                    {{page.media[service.image].html('','','w-full service-icon')}}
                </div>
                <h3 class="py-4 font-serif"> {{service.title}} </h3>
                <p class="mb-4"> {{service.text}} </p>
            </div>
		{% endfor %}
        </div>
        <div class="text-center">
            <a href="{{page.header.button_page}}" class="btn rounded bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 mt-3"> {{page.header.button_text}} </a>
        </div>
    </div>
</div>

